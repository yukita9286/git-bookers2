<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <div><%= render 'books/list', user: @user, book: @book %></div>
    </div>
  
<div class="col-md-8 offset-md-1">
  
<p id="notice"></p>

<h2>Users</h2>
<table class="table">

 <thead>
  <tr>

      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>

  </tr>
 </thead>

  <tbody>
   <% @users.each do |user| %>
    
    <tr>
     
    <div><td><%= image_tag @user.get_profile_image(100,100) %></td></div>
      <td><%= user.name %></td>
      <td><%= link_to 'Show', user_path(user.id) %></td>

    </tr>
    
   <% end %>
  </tbody>
</table>
    
  </div>
</div>